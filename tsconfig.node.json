{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@images/*": ["assets/images/*"],
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
  },
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true
  },
  "include": ["vite.config.ts"]
}